{
  "name": "@standard/frontend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbo",
    "format": "prettier --write app/ modules/ shared/",
    "format.check": "prettier --check app/ modules/ shared/",
    "lint": "bun run lint.eslint && bun run lint.typecheck && bun run format.check",
    "lint.fix": "bun run lint.eslint --fix && bun run format",
    "lint.oxlint": "oxlint -c oxlint.json --deny-warnings --ignore-path .gitignore",
    "lint.eslint": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" eslint --report-unused-disable-directives-severity=off --cache",
    "lint.typecheck": "tsc",
    "postinstall": "fumadocs-mdx && bun husky",
    "prepare": "husky",
    "upgrade.deps": "bun upgrade-deps",
    "start": "next start"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.1.6",
    "@techmely/es-toolkit": "^1.3.1",
    "babel-plugin-react-compiler": "19.0.0-beta-201e55d-20241215",
    "fontaine": "^0.5.0",
    "fumadocs-core": "14.6.1",
    "fumadocs-mdx": "11.1.2",
    "fumadocs-ui": "14.6.1",
    "next": "15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-katex": "^7.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mdx": "^3.1.0",
    "remark-rehype": "^11.1.1",
    "remark-stringify": "^11.0.0",
    "scroll-into-view-if-needed": "^3.1.0",
    "shiki": "^1.24.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.16.0",
    "@eslint/markdown": "^6.2.1",
    "@next/bundle-analyzer": "^15.1.0",
    "@techmely/types": "^1.9.0",
    "@types/eslint": "^9.6.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/eslint-plugin": "^1.1.18",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-plugin-import-x": "^4.5.0",
    "eslint-plugin-oxlint": "^0.15.2",
    "eslint-plugin-playwright": "^2.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "oxlint": "0.15.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "engines": {
    "bun": ">=1.1.38",
    "node": ">=22"
  },
  "nano-staged": {
    "**/*.{js,jsx,mjs,cjs,ts,tsx,yml,json,html,md,css,scss}": [
      "biome format --write --no-errors-on-unmatched",
      "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" eslint --cache --fix"
    ]
  }
}
